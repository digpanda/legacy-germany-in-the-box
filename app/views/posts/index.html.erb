<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Productid</th>
    <th>Collectionid</th>
    <th>Chatid</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.image %></td>
        <td><%= post.productId %></td>
        <td><%= post.collectionId %></td>
        <td><%= post.chatId %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
