<div class="row js-footer-stick">
  <div class="col-md-12 dashboard-layout__footer">
    <div class="row">
      <div class="col-md-2 +left">
        <strong>Germany in the Box</strong>
      </div>

      <div class="col-md-4 col-md-push-2 +left">
        <%= link_to I18n.t(:icp_registration, scope: :footer) %> /
        <%= link_to I18n.t(:terms_conditions, scope: :footer), agb_guest_pages_path %> /
        <%= link_to I18n.t(:privacy_statement, scope: :footer), privacy_guest_pages_path %> /
        <%= link_to I18n.t(:sell_on_gbox, scope: :footer), saleguide_guest_pages_path %>
      </div>

      <!-- Time zones -->
      <div class="col-md-6 +right +desktop">
        UTC <span id="utc-time"><%= Time.now.utc.strftime("%T") %></span> -
        Germany <span id="germany-time"><%= Time.now.utc.in_time_zone("Berlin").strftime("%T") %></span> -
        China <span id="china-time"><%= Time.now.utc.in_time_zone("Beijing").strftime("%T") %></span>
      </div>
    </div>
  </div>
</div>
<!-- End of footer -->
