<%= form_for @customer, :data => {:toggle => 'validator'}, :url => customer_account_path, :method => :patch do |f| %>

<div class="row">

  <div class="col-md-6 col-md-push-3 col-md-pull-3">

    <div class="row">
    <h2 class="+centered"><%= I18n.t('title.we_need_more_info') %></h2>
    <div class="+spacer"></div>
    </div>

    <div class="row">
      <div class="col-md-8 col-md-push-2 col-md-pull-2">

      <% unless @customer.valid_email? %>
        <div class="form-group">
          <%= f.label :email, I18n.t('edit_account.email') %>
          <%= f.text_field :email, :class => 'form-control', :value => '', :type => 'email', :required => true %>
        </div>
      <% end %>

      <% unless @customer.lname %>
        <div class="form-group">
          <%= f.label :lname, I18n.t('edit_address.lname') %>
          <%= f.text_field :lname, :class => 'form-control', :required => false, :placeholder => '请输入中文' %>
        </div>
      <% end %>

      <% unless @customer.fname %>
        <div class="form-group">
          <%= f.label :fname, I18n.t('edit_address.fname') %>
          <%= f.text_field :fname, :class => 'form-control', :required => false, :placeholder => '请输入中文' %>
        </div>
      <% end %>

      </div>
    </div>

    <div class="row">
      <div class="col-md-4 col-md-push-4 col-md-pull-4">
        <div class="row +centered">
          <div class="+small-spacer"></div>
          <button type="submit" id="checkout-button" class="big-button --blue"> <%= I18n.t('checkout.checkout') %> <i class="fa fa-check-circle"></i></button>
          <div class="+small-spacer"></div>
        </div>
      </div>
    </div>

  </div>

</div>

<% end %>
